<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llEntryViewContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgTitle"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:padding="7dp"
            android:alpha="0.9"
            android:background="@drawable/shadow_bg_layout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="หมวด"
                android:textColor="@color/tw__composer_light_gray" />

            <TextView
                android:id="@+id/txtCategoryName"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ชื่อหมวด"
                android:textColor="@color/tw__solid_white" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:alpha="0.9"
            android:background="@drawable/shadow_bg_layout"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignBottom="@+id/imgTitle"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_list_wt"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/txtCountContent"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/tw__solid_white" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ขั้นตอน"
                android:textColor="@color/tw__solid_white" />

        </LinearLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:padding="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtCountView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/com_facebook_button_background_color_focused_disabled"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.8"
            android:text="คนดู"
            android:textColor="@color/com_facebook_button_background_color_focused_disabled" />

        <ImageButton
            android:id="@+id/imgBtnSetting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/bg_button_3dot_black"
            app:srcCompat="@drawable/ic_dots_vertical" />
    </LinearLayout>

</LinearLayout>