<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_list_item"
            />

        <TextView
            android:id="@+id/txtRendering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="วิธีดำเนินการ"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/buttonOn" />


    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        app:cardUseCompatPadding="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcvDescriptionContrainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="top"
            android:paddingTop="5dp">
        </android.support.v7.widget.RecyclerView>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnAddDescription"
        style="@android:style/Widget.Material.Light.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/buttonOn"
        android:drawableLeft="@drawable/ic_list_wt"
        android:drawablePadding="3dp"
        android:text="เพิ่มขั้นตอน"
        android:textColor="@color/tw__solid_white" />

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/layout_footer"/>


</LinearLayout>