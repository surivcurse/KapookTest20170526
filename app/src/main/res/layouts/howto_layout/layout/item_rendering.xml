<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/llRendering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/bg_layout_howto_content"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtRendering"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="3dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"/>

                <EditText
                    android:id="@+id/edtRendering"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:background="@color/bg_howto_edittext"
                    android:paddingTop="5dp"
                    android:paddingLeft="3dp"
                    android:paddingBottom="3dp"
                    android:layout_marginRight="5dp"
                    android:hint="ใส่สิ่งที่ต้องเตรียม"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title" />

                <ImageButton
                    android:id="@+id/btnRenderDragItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_drag_blue"
                    android:visibility="visible"
                    app:srcCompat="@drawable/button_drag_blue" />

                <ImageButton
                    android:id="@+id/buttonDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_3dot_black"
                    android:visibility="visible"
                    app:srcCompat="@android:drawable/ic_delete" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRenderingView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="visible"
            android:paddingRight="5dp"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtNumberView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="3dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"/>

                <TextView
                    android:id="@+id/txtRenderingView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="3dp"
                    android:layout_marginRight="5dp"
                    android:hint="ใส่สิ่งที่ต้องเตรียม"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/llRenderingView"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/layout_footer"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

</RelativeLayout>

