<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="5dp">

    <com.app.me.kapooktest.customclass.CircleImageView
        android:id="@+id/imgProfile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/ic_kapook"
        android:layout_marginRight="5dp"/>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="Profile Name"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnSwitchPublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border_layout"
            android:drawableLeft="@drawable/ic_public_on"
            android:drawablePadding="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/ic_drop_blue"
            android:text="@string/txt_public"
            android:textColor="@color/buttonOn" />

        <Button
            android:id="@+id/btnSwitchDraft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="16dp"
            android:drawableLeft="@drawable/ic_unselected_on"
            android:drawablePadding="3dp"
            android:text="@string/txt_draft"
            android:textColor="@color/buttonOn"
            android:visibility="gone"
            android:background="@drawable/button_border_layout"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnCategorySelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:background="@drawable/button_border_layout"
        android:drawableLeft="@drawable/ic_wigget_blue"
        android:drawablePadding="3dp"
        android:drawableRight="@drawable/ic_drop_blue"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/txt_select_category"
        android:textColor="@color/buttonOn" />

</LinearLayout>